{% extends "templates/panel.twig" %}{% block content %}
<div class="row">
	<div class="col-xs-12">
		<div class="box">
			
			<!-- Box Header -->
			<div class="box-header">
			
				<!-- Title & Tools -->
				<h3 class="box-title col-md-2">Listing User Groups</h3>
				
			</div>
			
			<div class="box-body table-responsive no-padding">
				<table class="table table-hover">
					<tbody>
						<tr class="row">
							<th class="col-md-1">ID</th>
							<th class="col-md-5">Name</th>
							<th class="col-md-5">Slug</th>
							<th class="col-md-1 text-center" style="width: 200px;">Edit</th>
						</tr>
						
						{% for group in groups %}
						<tr class="row">
							<td class="col-md-1">{{ group.id }}</td>
							<td class="col-md-5">{{ group.name }}</td>
							<td class="col-md-5">{{ group.slug }}</td>
							<td class="col-md-1 text-center">
								<a href="#" class="btn btn-flat btn-primary"><span class="fa fa-edit"></span></a>
								<a href="#" class="btn btn-flat btn-danger"><span class="fa fa-trash"></span></a> 
							</td>
						</tr>
						{% endfor %}
					
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

{% endblock %}
