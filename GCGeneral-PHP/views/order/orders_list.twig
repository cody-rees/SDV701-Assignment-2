{% extends "templates/panel.twig" %}{% block content %}
<div class="row">
	<div class="col-xs-12">
		<div class="box">
			
			<!-- Box Header -->
			<div class="box-header">
			
				<!-- Title & Tools -->
				<h3 class="box-title col-md-2">Listing Orders <small>(Total: ${{ total }})</small></h3>
				
				
			</div>
			
			<div class="box-body table-responsive no-padding">
				<table class="table table-hover">
					<tbody>
						<tr class="row">
							<th class="col-md-1">ID</th>
							<th class="col-md-2">Name</th>
							<th class="col-md-2">Email</th>
							<th class="col-md-3">Address</th>
							<th class="col-md-1">Quantity</th>
							<th class="col-md-1">Total Paid</th>
							<th class="col-md-2">Game Ordered</th>
						</tr>
						
						{% for order in orders %}
						<tr class="row">
							<td class="col-md-1">{{ order.order_id }}</td>
							<td class="col-md-2">{{ order.first_name ~ ' ' ~ order.last_name }}</td>
							<td class="col-md-2">{{ order.email }}</td>
							<td class="col-md-3">{{ order.address }}</td>
							<td class="col-md-1">{{ order.quantity }}</td>
							<td class="col-md-1">${{ order.total_paid|number_format(2) }}</td>
							<td class="col-md-2"><a href="{{ app.urlFor('edit-game', {'gameID': order.game_id} ) }}">{{ order.game.title }}</a></td>
						</tr>
						{% endfor %}
					
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

{% endblock %}
